{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "location for resource created."
            }
        },
        "digitalTwinName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of an existing Digital Twins Instances in the resource group."
            }
        },
        "functionAppName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of the injector Function App. leave empty for a default name."
            }
        }
    },
    "variables": {
        "dtName": "[parameters('digitalTwinName')]",
        "faName": "[if(empty(parameters('functionAppName')),concat('injector', take(uniqueString(resourceGroup().id),8)),parameters('functionAppName'))]"
    },
    "functions": [],
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "injector-deployment",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/Cosmo-Tech/azure-digital-twin-injector/deploy/deploy/azuredeploy.json"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "digitalTwinsInstancesName": {
                        "value": "[variables('dtName')]"
                    },
                    "functionAppName": {
                        "value": "[variables('faName')]"
                    }
                }
            },
            "dependsOn": []
        }
    ],
    "outputs": {}
}
