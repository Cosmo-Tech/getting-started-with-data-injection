{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "location for resource created."
            }
        },
        "digitalTwinName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of the new Digital Twins Instances. Leave empty for default name."
            }
        }
    },
    "variables": {
        "dtName": "[if(empty(parameters('digitalTwinName')),concat('digitaltwin', take(uniqueString(resourceGroup().id),8)),parameters('digitalTwinName'))]",
    },
    "functions": [],
    "resources": [
        {
            "type": "Microsoft.DigitalTwins/digitalTwinsInstances",
            "apiVersion": "2020-12-01",
            "name": "[variables('dtName')]",
            "location": "[parameters('location')]",
            "properties": {
                "publicNetworkAccess": "Enabled"
            }
        },
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2020-10-01",
            "name": "injectInputData",
            "location": "[resourceGroup().location]",
            "kind": "AzureCLI",
            "properties": {
                "forceUpdateTag": "1",
                "azCliVersion": "2.9.0",
                "environmentVariables": [
                    {
                        "name": "MODEL_URI",
                        "value": "https://raw.githubusercontent.com/Cosmo-Tech/getting-started-with-data-injection/main/data/models.json"
                    },
                    {
                        "name": "MODEL_FILE",
                        "value": "models.json"
                    },
                    {
                        "name": "MODEL_INSTANCES_NAME",
                        "value": "[variables('dtName')]"
                    }
                ],
                "primaryScriptUri": "https://raw.githubusercontent.com/Cosmo-Tech/getting-started-with-data-injection/main/arm/uploadTwinModels.sh",
                "timeout": "PT1H",
                "retentionInterval": "P1D",
                "cleanupPreferences": "OnSuccess"
            },
            "dependsOn": [
                "[resourceId('Microsoft.DigitalTwins/digitalTwinsInstances', variables('dtName'))]"
            ]
        }
    ],
    "outputs": {}
}
